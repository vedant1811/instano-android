<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">

        <item name="colorPrimary">@color/primary</item>
        <item name="android:textColorPrimary">@android:color/white</item>

    </style>

    <style name="titleTextStyle" parent="@style/Theme.AppCompat.Light" >
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="WhiteEditText" parent="@style/Theme.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="LinkTypeButton">
        <item name="android:textAppearance">@style/TextAppearanceMedium</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:background">@drawable/selector_bookit_button</item>
    </style>

    <style name="RedButton" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/ButtonTextAppearance</item>
        <item name="android:background">@drawable/selector_red_button</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="YellowButton" parent="RedButton">
        <item name="android:background">@drawable/selector_yellow_button</item>
    </style>

    <style name="ButtonTextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearanceComment" parent="android:TextAppearance">
        <item name="android:textColor">@color/instano_grey</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearanceMedium" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearanceHeading" parent="android:TextAppearance.Large">
        <item name="android:textColor">@color/instano_red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearanceListItemHeading" parent="TextAppearanceHeading">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearancePrice" parent="TextAppearanceMedium">
    </style>

    <style name="TextAppearanceListItemSingleLine" parent="TextAppearanceMedium">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextAppearanceListItemTimeElapsed" parent="TextAppearanceMedium">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MediumText" parent="@style/Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="LargeText" parent="@style/Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">26sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/instano_red</item>
    </style>

    <style name="SmallText" parent="@style/Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/instano_grey</item>
    </style>
    

    <style name="NavigationButton" parent="@style/Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">35dp</item>
        <item name="android:textColor">@drawable/selector_navigation_text</item>
        <item name="android:background">@drawable/selector_navigation_background</item>
    </style>

    <style name="NavigationImageButton" parent="@style/Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/selector_navigation_background</item>
    </style>

    <style name="ContactButton" parent="@style/Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/selector_callbutton_icon</item>
        <item name="android:background">@drawable/selector_imagebutton_background</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="MsgButton" parent="@style/Theme.AppCompat.Light" >
        <item name="android:layout_width"> wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/selector_msgbutton_icon</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/selector_imagebutton_background</item>
    </style>

    <style name="BookitButton" parent="@style/Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:background">@drawable/selector_bookit_button</item>
        <item name="android:text">Book it</item>
        <item name="android:textColor">@drawable/bookit_text_selector</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="image_view_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">240dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:src">@android:drawable/ic_menu_report_image</item>
        <item name="android:background">@drawable/selector_image_button</item>
    </style>

</resources>
