<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">

        <item name="colorPrimary">@color/instano_red</item>

        <item name="android:buttonStyle">@style/YellowButton</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:editTextStyle">@style/WhiteEditText</item>
        <item name="android:textAppearanceLarge">@style/TextAppearanceHeading</item>
        <item name="android:textAppearanceMedium">@style/TextAppearanceMedium</item>
    </style>

    <style name="ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/titleTextStyle</item>
        <item name="android:background">@color/instano_red</item>
    </style>

    <style name="titleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title" >
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WhiteEditText" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="LinkTypeButton">
        <item name="android:textAppearance">@style/TextAppearanceMedium</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:background">@drawable/selector_borderless_button</item>
    </style>

    <style name="RedButton" parent="android:style/Widget.Holo.Light.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/ButtonTextAppearance</item>
        <item name="android:background">@drawable/selector_red_button</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="YellowButton" parent="RedButton">
        <item name="android:background">@drawable/selector_yellow_button</item>
    </style>

    <style name="ButtonTextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearanceComment" parent="android:TextAppearance">
        <item name="android:textColor">@color/instano_grey</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearanceMedium" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearanceHeading" parent="android:TextAppearance.Large">
        <item name="android:textColor">@color/instano_red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearanceListItemHeading" parent="TextAppearanceHeading">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearancePrice" parent="TextAppearanceMedium">
    </style>

    <style name="TextAppearanceListItemSingleLine" parent="TextAppearanceMedium">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextAppearanceListItemTimeElapsed" parent="TextAppearanceMedium">
        <item name="android:textStyle">italic</item>
    </style>

</resources>
