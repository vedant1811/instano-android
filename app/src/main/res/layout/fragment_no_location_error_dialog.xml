<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/general_separator_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="set location by "
        android:id="@+id/titleTextView"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/general_separator_margin" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turning on GPS in settings"
        android:id="@+id/gpsSettingsButton"
        android:layout_gravity="center_horizontal"
        style="@style/LinkTypeButton"
        android:layout_margin="2dp"
        android:padding="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manually selecting location on map"
        android:id="@+id/selectLocationButton"
        android:layout_gravity="center_horizontal"
        style="@style/LinkTypeButton"
        android:layout_margin="2dp"
        android:padding="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/addressEditText"
        android:padding="@dimen/general_min_padding"
        android:layout_margin="4dp"
        android:hint="enter address or PIN" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entering an address without GPS"
        android:id="@+id/enterAddressButton"
        android:layout_gravity="center_horizontal"
        style="@style/LinkTypeButton"
        android:layout_margin="2dp"
        android:padding="10dp" />

</LinearLayout>