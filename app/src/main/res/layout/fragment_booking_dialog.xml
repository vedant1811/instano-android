<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="60dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    >

    <ImageView
        style="@style/image_view_card"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_weight="1"
        android:id="@+id/productImage"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center|center_horizontal"
        android:gravity="center"
        android:textSize="16sp"
        android:text="Sony Xperia M for Rs 10,200 \n at Croma Retail Store \n Booking will be valid till 21:00 PM, Wednesday,23rd July"
        android:id="@+id/item_details"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:focusable="false">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bookButton"
            android:background="@drawable/selector_navigation_background"
            android:layout_weight="1"
            android:textSize="22sp"
            android:text="Book"
            android:gravity="center"
            android:textColor="@drawable/selector_navigation_text"
            android:padding="20dp"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"
            android:id="@+id/cancelButton"
            android:text="Cancel"
            android:elevation="100dp"
            android:gravity="center"
            android:background="@drawable/selector_navigation_background"
            android:textColor="@drawable/selector_navigation_text"
            android:padding="20dp"
            android:layout_gravity="bottom"
            />

        </LinearLayout>

  </LinearLayout>