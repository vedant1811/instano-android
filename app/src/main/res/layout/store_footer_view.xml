<?xml version="1.0" encoding="utf-8"?>
    <merge xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:id="@+id/mylayout"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/translucent_white">



    <TextView
        style="@style/MediumText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/dealHeading"
        android:text="Medium Text"/>

    <TextView
        style="@style/LargeText"
        android:id="@+id/dealSubheading"
        android:text="Large Text"
        android:layout_below="@id/dealHeading"
        android:layout_alignParentLeft="true"
       />


    <TextView
        style="@style/SmallText"
        android:id="@+id/sellerDetails"
        android:layout_below="@id/dealSubheading"
        android:text="Small Text"
        />

    <ImageButton
        style="@style/MsgButton"
        android:layout_marginBottom="4dp"
        android:id="@+id/msgButton"
        android:layout_below="@id/sellerDetails"

       />

    <ImageButton
        style="@style/ContactButton"
        android:id="@+id/contactButton"
        android:layout_alignBottom="@id/msgButton" />

    <Button
        style="@style/BookitButton"
        android:layout_margin="10dp"
        android:layout_alignBottom="@id/msgButton"
        android:id="@+id/bookitButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        </Button>


</RelativeLayout>

    </merge>