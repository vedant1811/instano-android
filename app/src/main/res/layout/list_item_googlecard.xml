<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="7dp"
    android:background="#00FFFFFF"
    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:id="@+id/dealProduct"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/img_nature5"
        android:background="#00FFFFFF"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/dealHeading"
        android:background="#CCFFFFFF"
        android:layout_above="@+id/dealSubheading"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:layout_alignRight="@+id/dealSubheading"
        android:layout_alignEnd="@+id/dealSubheading" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/dealSubheading"
        android:background="#CCFFFFFF"
        android:layout_above="@+id/dealDistance"
        android:layout_alignLeft="@+id/dealProduct"
        android:layout_alignStart="@+id/dealProduct"
        android:singleLine="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/dealDistance"
        android:layout_alignBottom="@+id/dealProduct"
        android:layout_alignLeft="@+id/dealProduct"
        android:layout_alignStart="@+id/dealProduct"
        android:background="#CCFFFFFF"
        android:singleLine="true"
        android:layout_alignRight="@+id/dealSubheading"
        android:layout_alignEnd="@+id/dealSubheading" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:layout_below="@+id/dealProduct"
        android:src="@drawable/chat_store"
        android:background="#00FFFFFF"
        android:paddingTop="4dp"
        android:paddingLeft="5dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:layout_below="@+id/dealProduct"
        android:layout_centerHorizontal="true"
        android:src="@drawable/call_store"
        android:background="#00FFFFFF"
        android:paddingTop="4dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/imageButton5"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dealProduct"
        android:text="book it"
        />


</RelativeLayout>