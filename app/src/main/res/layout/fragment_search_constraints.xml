<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.instano.retailer.instano.search.SearchConstraintsFragment">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:id="@+id/parentLayout"
        android:padding="4dp"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Search for"
                android:id="@+id/textView2"
                android:gravity="center_vertical" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/searchStringEditText"
                android:minWidth="120dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Search constraints:"
            android:id="@+id/textView3"
            android:paddingTop="16dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/withinTextView"
                android:gravity="center_vertical"
                android:minWidth="100dp"
                android:text="Within 10km:" />

            <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/withinSeekBar"
                android:paddingRight="16dp"
                android:max="99"
                android:progress="9"
                android:indeterminate="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Product Category:"
                android:id="@+id/textView4"
                android:paddingTop="10dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="10dp" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/productCategorySpinner"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Brand:"
                android:id="@+id/textView6"
                android:paddingTop="10dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="10dp" />

            <view
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                class="com.instano.retailer.instano.utilities.MultiSpinner"
                android:id="@+id/brandsMultiSpinner" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Price Range"
            android:id="@+id/textView5"
            android:paddingLeft="4dp"
            android:paddingTop="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frameLayout2">

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="₹5,000 to ₹50,000"
                android:id="@+id/priceRangeTextView"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingRight="4dp" />

        </LinearLayout>


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/additionalInfoEditText"
            android:hint="additional info (if any)" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Search"
            android:id="@+id/searchButton"
            android:onClick="searchButtonClicked" />

    </LinearLayout>
</FrameLayout>
