<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <view
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.MapView"
        android:id="@+id/map"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="110dp"
        android:background="@android:drawable/dialog_holo_light_frame"
    />

    <TextView
        style="@style/MediumText"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/shopName"
        android:text="Medium Text"
        />

    <TextView
       android:id="@+id/addressTextView"
       style="@style/LargeText"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="60dp"
       android:text="Large Text"
       />

    <TextView
        style="@style/SmallText"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:text="Small Text"
        android:id="@+id/distanceTextView"
        />

    <ImageButton
        style="@style/MsgButton"
        android:layout_marginBottom="4dp"
        android:id="@+id/msg"
        android:layout_alignParentBottom="true"
        />

    <ImageButton
        style="@style/ContactButton"
        android:id="@+id/callImageButton"
        android:layout_alignBottom="@id/msg"
        />

    <Button
        style="@style/BookitButton"
        android:layout_margin="10dp"
        android:layout_alignBottom="@id/msg"
        android:id="@+id/bookitButtonStoreFooter"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>