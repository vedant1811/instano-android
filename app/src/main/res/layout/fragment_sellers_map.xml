<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <view
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.MapView"
        android:id="@+id/map"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="110dp"
        android:background="@android:drawable/dialog_holo_light_frame"
    />

    <TextView
        android:padding="8dp"
        style="@style/MediumText"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/shopName"
        />

    <TextView
        style="@style/SmallText"
        android:padding="8dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:id="@+id/distanceTextView"
        />

    <ImageButton
        style="@style/MsgButton"
        android:layout_marginBottom="8dp"
        android:id="@+id/msg"
        android:layout_alignParentBottom="true"
        />

    <ImageButton
        style="@style/ContactButton"
        android:id="@+id/callImageButton"
        android:layout_alignBottom="@id/msg"
        />

    <Button
        style="@style/BookitButton"
        android:layout_margin="10dp"
        android:layout_alignBottom="@id/msg"
        android:id="@+id/bookitButtonStoreFooter"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>